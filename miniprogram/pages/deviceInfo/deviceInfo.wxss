/* pages/deviceInfo/deviceInfo.wxss */

.picture-container{
  width: 100%;
  height: 60%;

  background-color: #e64d4d;
  color: #fff; 

  display: flex;
  flex-direction: row;
  justify-content: center;
}

.device-picture{
  padding: 0rpx;
  margin: 0rpx;

  height: 700rpx;
  width: 400rpx;
}

.device-information-container{
  width: 100%;
  border-top: 1px;
  border-bottom: 1px;
  border-left: 0px;
  border-right: 0px;
  border-style: solid;
  border-color: #e2dada8e;

  position: fixed;
  bottom: 200rpx;
}

.device-information{
  padding: 20rpx;
  margin: 0rpx;
  width: 100%;

  height: 150rpx;

  display: flex;
  flex-direction: row;
}

.informaion-title{
  margin-right: 20rpx;
  padding: 30rpx 20rpx;

  width: 28%;

  display: flex;
  flex-direction: column;
}

.device-name{
  background-color: #ddbf7c;
  color: #fef8de
}

.device-name-en{
  padding: 0rpx;
  margin: 0rpx;

  font-size: 25rpx;
}

.device-name-ch{
  padding: 0rpx;
  margin: 0rpx;

  font-size: 40rpx;

  font-family: '微软雅黑';
  font-weight: bold;
}

.information-content{
  padding: 20rpx;

  width: 60%;
}

.device-name-content{
  padding: 0rpx;
  margin: 0rpx;

  font-size:45rpx;

  background-color: #f8f6f9;
}

.actionItems{
  padding: 0rpx;
  margin: 0rpx;

  width: 100%;

  display: flex;
  flex-direction: row;

  position: fixed;
  bottom: 30rpx;
  
  z-index: 9999;
}

.fixedButton{
  width: 50%;
  
  background-color: #757575;
  color: #fff;
}